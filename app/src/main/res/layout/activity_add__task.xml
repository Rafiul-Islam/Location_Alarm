<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20sp"
        tools:context="com.example.rafiulislamrafi.locationalarm.Add_Task">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/getLocation"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:hint="Click on the location image" />

            <ImageView
                android:id="@+id/mapViewButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mapicon" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="task details"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/getTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="time"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <TimePicker
            android:id="@+id/getTime"
            android:layout_width="match_parent"
            android:layout_height="200dp"></TimePicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="date"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <DatePicker
            android:id="@+id/getDate"
            android:layout_width="match_parent"
            android:layout_height="200dp"></DatePicker>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="20dp"
            android:text="submit"
            android:textAllCaps="true" />

    </LinearLayout>
</ScrollView>